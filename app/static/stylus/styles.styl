@import 'nib'
@import 'color-fonts'
@import 'generales'




/*   NAV    */
.aside-main
	width 250px
	.cnt-logo-admin
		background c-info
		.titulo
			text-align center
			padding 10px 10px
			h1
				color c-blanco
				font-family roboto
				font-weight 400
				font-size f-titulo-admin

	.cnt-usuario
		padding 10px 10px
		background c-nav
		figure
			border-radius 50%
			width 50px
			display inline-block
			vertical-align top
			img
				border-radius 50%
				display block
				width 100%
				height auto
		.usuario
			padding 5px 5px
			display inline-block
			width 160px
			vertical-align top
			h3.usuario-nombre
				color c-blanco
				font-family roboto
				font-weight 400
				font-size f-subtitulo
			p.usuario-cargo
				color c-default
				font-family roboto
				font-weight 400
				font-size f-texto
	.cnt-menu
		background c-nav
		ul.ul-header-main

			span
				color c-blanco
				font-family roboto
				font-size f-normal
				font-weight 400
			>li
				cursor pointer
				list-style-type none
				>a:hover
					background c-nav
					border-left c-success 3px solid
				>a
					background c-nav-hover
					transition 0.2s ease all
					border-left solid 3px transparent
					padding 15px 10px 15px 30px
					display block
			ul.menu-secund-active
				height auto !important
			ul.menu-secund
				height 0
				visibility hidden
				li
					cursor pointer
					list-style-type none
					a
						background c-nav
						display block

						padding 15px 10px 15px 55px
						span
							font-size f-texto
