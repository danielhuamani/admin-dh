

header
	height 60px
	width  100%
	background color_white
	box-sizing border-box
	border-bottom solid 1px color_background
	.container-all
		padding-left 15px
		padding-right 15px
		.row
			align-items center
			.icon-menu
				padding 14px 10px
				/*height 100%
				padding 8px*/
				color color_sidebar
				font-size 32px
				transition 0.3s ease all
				&:hover
					color color_main
				/*	background color_main*/
			.avatar-thumb
				cursor pointer
				padding 10px
				figure
					margin-right 5px
					img
						border 2px solid color_background
				h4.username
					color color_sidebar
					transition 0.3s ease all
					i
						color color_sidebar
						font-size 12px
				/*&:hover
					span
						color color_main
						i
							color color_main*/
			.container-notification
				position relative
				margin-right 20px
				span.number
					position absolute
					top 5px
					right 8px
					z-index 10
					font-size 12px
					background color_info
					color color_white
					padding 3px
					display block
					border-radius 4px
				.icon-notification
					padding 20px 10px 16px 10px
					color color_sidebar
					font-size 24px
					transition 0.3s ease all
					&:hover
						color color_main


footer
	width 100%
	position absolute
	bottom 0
	left 0
	right 0
	margin auto
	background color_white
	padding 8px 15px
	box-sizing border-box
	span
		font-size 14px
